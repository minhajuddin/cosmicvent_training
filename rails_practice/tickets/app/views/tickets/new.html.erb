<h1>New ticket</h1>

<%= error_messages_for :ticket %>

<% form_for(@ticket) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Seat#</b><br />
    <%= f.text_field :seat_id_seq %>
  </p>

  <p>
    <b>Address</b><br />
    <%= f.text_area :address %>
  </p>

  <p>
    <b>Price paid</b><br />
    <%= f.text_field :price_paid %>
  </p>
  
  <p>
    <b>Phone</b><br />
    <%= f.text_field :phone %>
  </p>
  
  <p>
    <b>Email address</b><br />
    <%= f.text_field :email_address %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', tickets_path %>
